
<div class="container">
  <h2>Lache un com:<br></h2>





  <form action="<%= create_comment_path %>" method="POST">
    <div class="form-group">
      <label for="comment">Nom</label><br>
     <input type="text" name="anonymous_commentor" placeholder="Anonymous name"  class= 'form-control w-25'><br>
    </div>
    <div class="form-group">
      <label for="content">Commentaire</label><br>
     <input type="text" name="content" placeholder="vas y lache toi"  class= 'form-control w-25'><br>
    </div>
    <input type="submit" value="Commenter" class= "btn btn-primary">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </form>
</div>
